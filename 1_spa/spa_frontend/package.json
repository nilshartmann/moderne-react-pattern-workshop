{
  "name": "spa_frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "check": "pnpm lint && pnpm prettier:check && tsc --noEmit --skipLibCheck",
    "check:ts": "tsc --noEmit --skipLibCheck",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "openapi": "curl http://localhost:8080/v3/api-docs>api-doc.json",
    "openapi:generate": "typed-openapi -r zod ../../0_backend/generated-api-doc.yaml -o src/components/api-types.ts && prettier --write src/components/api-types.ts",
    "openapi:watch": "onchange -i ../../0_backend/generated-api-doc.yaml -- pnpm openapi:generate"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.51.23",
    "@tanstack/react-query-devtools": "^5.51.23",
    "@tanstack/react-router": "^1.48.1",
    "bootstrap-icons": "^1.11.2",
    "date-fns": "^3.0.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^4.1.2",
    "tailwind-merge": "^2.5.2",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.51.15",
    "@tanstack/router-devtools": "^1.48.1",
    "@tanstack/router-plugin": "^1.47.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "google-fonts-helper": "^3.4.1",
    "google-fonts-offline": "^0.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^3.4.10",
    "typed-openapi": "^0.4.1",
    "typescript": "^5.5.4",
    "vite": "^5.4.0"
  }
}
